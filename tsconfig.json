{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@condition/*": ["src/condition/*"],
      "@convert/*": ["src/convert/*"],
      "@editor/*": ["src/editor/*"],
      "@general/*": ["src/general/*"],
      "@icons/*": ["src/icons/*"],
      "@img/*": ["src/img/*"],
      "@variable/*": ["src/variable/*"]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ]
    
  },
  "include": ["src/**/*"]
}
